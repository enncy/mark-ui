{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "outDir": "./lib",
    "baseUrl": "./src",
    "paths": {
      "@/*":["./*"]
    }
  },
  "include": ["./css-generator.ts","./index.ts","src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "./**/*.vue"]
}
